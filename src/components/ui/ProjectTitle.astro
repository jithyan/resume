---
interface Props {
  projectName: string;
  client?: string;
}

const { projectName, client } = Astro.props;
---

<dl class="flex flex-row border-solid border-2 p-1 shadow mb-4">
  <dt class="flex-none w-16 border-r-2 mr-2 font-semibold">Project</dt>
  <dd class="flex-auto">
    {projectName}
  </dd>
  { client && <dt class="flex-none w-16 border-l-2 border-r-2 pl-2 mr-2 font-semibold">Client</dt>
  <dd class="flex-auto">
    {client}
  </dd>}
</dl>
