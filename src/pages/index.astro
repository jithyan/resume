---
// Component Imports
import MainHead from "../components/MainHead.astro";
import Education from "../components/Education.astro";
import TechSkills from "../components/TechSkills.astro";
import WorkExperience from "../components/WorkExperience.astro";
import PersonalProjects from "../components/PersonalProjects.astro";
import Header from "../components/Header.astro";
import About from "../components/About.astro";
import Link from "../components/ui/Link.astro";

const currentDate = new Intl.DateTimeFormat("en-AU").format(new Date());
---

<html lang="en">
  <head>
    <MainHead
      title="Jithya's Resume"
      description={`Resume of Jithya N, last updated ${currentDate}`}
    />
  </head>
  <body class="bg-zinc-50">
    <div class="container mx-auto max-w-lg bg-zinc-100 px-2">
      <Header />
      <main>
        <About />
        <Education />
        <TechSkills />
        <WorkExperience />
        <PersonalProjects />
      </main>
      <footer class="text-center py-3">
        <p class="mb-0.5 text-sm">Last updated: {currentDate}</p>
        <small class="mb-0.5">
          Built with <Link href="https://astro.build/" text="Astro" /> and <Link
            href="https://tailwindcss.com/"
            text="Tailwind CSS"
          />
        </small>
      </footer>
    </div>
  </body>
</html>
